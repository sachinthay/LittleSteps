<!DOCTYPE html>
<html>
<head>
  <%- include('partials/header1.ejs') %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <title></title>
</head>
<body>
  <%- include('partials/navbar1.ejs') %>
  <div class="content">
    <h1>Add News/Event</h1>
    <form action="/add-news-event" method="post" enctype="multipart/form-data">
      <table class="table table-dark">
        <tr>
          <th><label for="title">Title:</label></th>
          <td><input type="text" name="title" id="title" required=""></td>
        </tr>
        <tr>
          <th><label for="description">Description:</label></th>
          <td>
          <textarea name="description" id="description" required=""></textarea></td>
        </tr>
        <tr>
          <th><label for="date">Event Date:</label></th>
          <td><input type="text" name="event_date" id="event_date" required=""></td>
        </tr>
        <tr>
          <th>Picture:</th>
          <td><input type="file" name="picture"></td>
        </tr>
        <tr>
          <td colspan="2"><button type="submit">Add News/Event</button></td>
        </tr>
      </table>
    </form>
  </div><%- include('partials/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script> 
  <script>




    // Pass the disabled dates from the server
    const disabledDates = <%- JSON.stringify(eventDates) %>;
    
    // Initialize Flatpickr on the event_date input with disabled dates
    flatpickr("#event_date", {
      dateFormat: "Y-m-d",
      disable: disabledDates
    });
  </script>
</body>
</html>